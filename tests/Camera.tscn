@onready var arrow : Node3D = $Arrow
const Radius : float = 2.5
const Rotation : Vector3 = Vector3(PI * 0.25,PI * 0.5,0)

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	pass

var crappy_lock : bool = false

func _process(_delta : float) -> void:
	if not crappy_lock and Input.is_key_pressed(KEY_X):
		crappy_lock = true
		arrow.rotate(Vector3(1,0,0),Rotation.x)

	if not crappy_lock and Input.is_key_pressed(KEY_Y):
		crappy_lock = true
		arrow.rotate(Vector3(0,1,0),Rotation.y)

	if not crappy_lock and Input.is_key_pressed(KEY_T):
		crappy_lock = true
		arrow.translate_object_local(Vector3(0,0,-Radius))

	if crappy_lock and not (Input.is_key_pressed(KEY_X) or Input.is_key_pressed(KEY_Y) or Input.is_key_pressed(KEY_T)):
		crappy_lock = false
"

